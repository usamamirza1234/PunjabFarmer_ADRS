<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:paddingStart="10dp"

    android:paddingTop="20dp"
    android:paddingEnd="10dp"

    >


    <LinearLayout
        android:id="@+id/lay_contribution_header_ll_tableHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_xmedium"
        android:layout_gravity="center"
        android:background="@color/green_govt"

        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"

        android:weightSum="100">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="start|center_vertical"
            >


            <TextView
                android:id="@+id/text_section"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:gravity="start|center_vertical"
                android:text="dsadsad"

                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_mini"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            >




            <ToggleButton
                android:layout_centerInParent="true"
                android:id="@+id/toggle_button_section"
                android:layout_width="22dp"
                android:layout_height="15dp"
                android:layout_toStartOf="@id/text_section_numb"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_arrow_down_24"
                android:checked="false"

                android:gravity="end|center_vertical"
                android:padding="10dp"
                android:textOff=""
                android:textOn="" />


            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/text_section_numb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"


                android:gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:text="443"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_mini"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>